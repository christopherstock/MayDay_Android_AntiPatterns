<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- unselected -->
    <item android:color="@color/text_button_black_unselect" android:state_selected="false" android:state_pressed="false" />

    <!-- focused -->
    <item android:color="@color/text_button_black_hover" android:state_selected="false" android:state_focused="true" />

    <!-- pressed -->
    <item android:color="@color/text_button_black_hover" android:state_selected="false" android:state_pressed="true" />

    <!-- selected -->
    <item android:color="@color/text_button_black_hover" android:state_selected="true" />

</selector>
