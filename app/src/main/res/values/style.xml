<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- detail-screen -->
    <style name="DetailScreenSubHeadline">
        <item name="android:textColor">@color/text_item</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25dp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">3</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DetailScreenSubText">
        <item name="android:textColor">@color/text_item</item>
        <item name="android:textSize">20dp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:singleLine">false</item>
        <!--<item name="android:maxLines">3</item>-->
    </style>



    <!-- The app's style - Disabled Title-bar -->
    <style name="AppTheme2" parent="android:Theme.Black">

        <!-- disable default window animation style -->
        <item name="android:windowAnimationStyle">@null</item>

    </style>

    <!-- The app's style - Disabled Title-bar -->
    <style name="AppTheme1" parent="android:Theme.NoTitleBar">

        <!-- remove window overlay shadow on top border -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- disable default window animation style -->
        <item name="android:windowAnimationStyle">@null</item>

    </style>

</resources>
