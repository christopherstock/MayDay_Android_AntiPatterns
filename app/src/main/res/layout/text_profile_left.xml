<?xml version="1.0" encoding="utf-8"?>

<!-- profile text -->
<TextView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/text_profile"
    android:textSize="@dimen/text_profile"
    android:includeFontPadding="true"
    android:lineSpacingMultiplier="1.0"
    android:fadingEdge="none"
    android:layout_gravity="left|top"
    android:layout_marginTop="0.0dp"
    android:layout_marginBottom="@dimen/content_distance_small"
    android:layout_marginLeft="@dimen/content_distance_big"
    android:layout_marginRight="@dimen/content_distance_big"

    android:singleLine="true"
    android:ellipsize="end"

    />
