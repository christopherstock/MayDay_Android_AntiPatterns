<?xml version="1.0" encoding="utf-8"?>

<!-- state 'lost password' -->
<de.mayflower.lib.ui.widget.LibScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbarThumbHorizontal="@drawable/de_mayflower_antipattern_scrollbar"
    android:scrollbarThumbVertical="@drawable/de_mayflower_antipattern_scrollbar"
    android:scrollbarSize="@dimen/scrollbar_width"
    android:fadingEdgeLength="@dimen/fading_edge_size"
    android:requiresFadingEdge="vertical"
    android:fadeScrollbars="true"
    android:paddingTop="@dimen/content_distance_normal"
    android:paddingBottom="@dimen/content_distance_normal"
    android:paddingLeft="@dimen/content_distance_normal"
    android:paddingRight="@dimen/content_distance_normal"
    >

    <!-- scrollbar content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|top"
        >

        <!-- spacer -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_distance_normal"
            android:background="@android:color/transparent"
        />

        <!-- white pane around input fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|top"
            android:background="@drawable/de_mayflower_antipattern_bg_form"
            android:paddingLeft="@dimen/content_distance_normal"
            android:paddingRight="@dimen/content_distance_normal"
            >

            <!-- spacer top -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_distance_normal"
                android:background="@android:color/transparent"
            />

            <!-- input field 'username' -->
            <EditText
                android:id="@+id/input_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/inputfield_height"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:hint="@string/state_lost_password_inputfield_username"
                android:gravity="left|center_vertical"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:textColor="@color/form_inputfield_fg"
                android:paddingLeft="@dimen/inputfield_margin_horizontal"
                android:paddingRight="@dimen/inputfield_margin_horizontal"
                android:maxLength="@integer/inputfield_max_length_username"
            />

            <!-- spacer -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_distance_normal"
                android:background="@android:color/transparent"
            />

        </LinearLayout>

        <!-- spacer -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_distance_normal"
            android:background="@android:color/transparent"
            />

        <!-- button 'request password' -->
        <include
            android:id="@+id/button_request_password"
            layout="@layout/button_black_specular_wide"
            />

        <!-- spacer -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_distance_normal"
            android:background="@android:color/transparent"
            />

    </LinearLayout>

</de.mayflower.lib.ui.widget.LibScrollView>
