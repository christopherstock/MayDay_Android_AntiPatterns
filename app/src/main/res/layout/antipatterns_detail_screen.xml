<?xml version="1.0" encoding="utf-8"?>

<!-- detail screen -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@color/screen_bg"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/detail_view_title"
            android:layout_width="match_parent"
            android:layout_height="200.0dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="30.0dp"
            android:includeFontPadding="true"
            android:lineSpacingMultiplier="1.0"
            android:fadingEdge="none"
            android:gravity="center"
            android:singleLine="false"
            android:maxLines="3"
            android:background="@color/project_purple"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical"
        android:padding="20dp">

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/detail_view_symptomtitle"
            android:theme="@style/DetailScreenSubHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Kennst Du das?" />

        <ListView
            android:id="@+id/detail_view_symptoms_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/detail_view_symptoms"
            android:theme="@style/DetailScreenSubItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:theme="@style/DetailScreenSubHeadline"
            android:id="@+id/detail_view_remedytitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="So wird es besser" />
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/detail_view_remedies"
            android:theme="@style/DetailScreenSubItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
</LinearLayout>
