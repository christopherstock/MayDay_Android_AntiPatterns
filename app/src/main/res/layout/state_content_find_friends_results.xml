<?xml version="1.0" encoding="utf-8"?>

<!-- state 'find friends results' - this RelativeLayout is a must! The nextedFrameLayout will not fill height otherwise! -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <!-- state 'find friends results' -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        >

        <!-- content container -->
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|top"
            />

        <!-- overlay -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            >

            <!-- overlay icon -->
            <de.mayflower.lib.ui.widget.LibImageView
                android:id="@+id/overlay_icon"
                android:layout_width="@dimen/loading_circle_size"
                android:layout_height="@dimen/loading_circle_size"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/net_picfood_loading_circle"
                android:visibility="invisible"
                />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
