<?xml version="1.0" encoding="utf-8"?>

<!-- state 'new entry' -->
<com.synapsy.android.lib.ui.widget.LibScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbarThumbHorizontal="@drawable/net_picfood_scrollbar"
    android:scrollbarThumbVertical="@drawable/net_picfood_scrollbar"
    android:scrollbarSize="@dimen/scrollbar_width"
    android:fadingEdgeLength="@dimen/fading_edge_size"
    android:requiresFadingEdge="vertical"
    android:fadeScrollbars="true"
    android:fillViewport="true"
    android:background="@color/screen_fg_ambient"
    >

    <!-- ScrollView-content -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:paddingTop="@dimen/content_distance_big"
        android:paddingBottom="@dimen/content_distance_big"
        >

        <!-- image container -->
        <com.synapsy.android.lib.ui.widget.LibImageView
            android:id="@+id/cropped_image"
            android:contentDescription="@string/empty_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/content_distance_normal"
            android:layout_marginRight="@dimen/content_distance_normal"
            />
<!--
            android:maxHeight="@dimen/state_new_entry_max_image_height"
-->

        <!-- Location and small buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:orientation="horizontal"
            android:paddingTop="@dimen/content_distance_big"
            android:baselineAligned="false"
            >

            <!-- location texts -->
            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left|top"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/content_distance_big"
                >

                <!-- text location -->
                <include    android:id="@+id/text_location"
                            layout="@layout/text_new_entry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                <!-- spacer -->
<!--
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/content_distance_normal"
                    android:background="@android:color/transparent"
                    />
-->
                <!-- text vicinity -->
                <include    android:id="@+id/text_vicinity"
                            layout="@layout/text_new_entry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

            </LinearLayout>

            <!-- small buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|top"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/content_distance_big"
                >

                <!-- button 'change location' -->
                <include    android:id="@+id/change_location"
                            layout="@layout/button_black_small_multiline"
                            />

                <!-- spacer -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/content_distance_normal"
                    android:background="@android:color/transparent"
                    />

                <!-- button 're-crop image' -->
                <include    android:id="@+id/recrop_image"
                            layout="@layout/button_black_small_multiline"
                            />

            </LinearLayout>

        </LinearLayout>

        <!-- white pane around input field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|top"
            android:background="@drawable/net_picfood_bg_form"
            android:layout_margin="@dimen/content_distance_normal"
            >

            <!-- comment box -->
            <EditText
                android:id="@+id/input_field_comment"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:lines="3"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:gravity="left|top"
                android:hint="@string/state_new_entry_comment_hint"
                android:layout_marginLeft="@dimen/content_distance_big"
                android:layout_marginRight="@dimen/content_distance_big"
                android:layout_marginTop="@dimen/content_distance_big"
                android:maxLength="@integer/inputfield_max_length_image_comment"
                android:background="@android:color/transparent"
                />

        </LinearLayout>

        <!-- text comment explanation -->
        <include    android:id="@+id/text_comment_explanation"
                    layout="@layout/text_new_entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_distance_big"
                    android:layout_marginRight="@dimen/content_distance_big"
                    />

        <!-- Cancel & Submit buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:orientation="horizontal"
            android:paddingTop="@dimen/content_distance_big"
            >

            <!-- button 'cancel' -->
            <include
                        android:id="@+id/cancel"
                        layout="@layout/button_black_specular"
                        />

            <!-- horizontal spacer -->
            <RelativeLayout
                android:layout_width="@dimen/content_distance_normal"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                />

            <!-- button 'submit entry' -->
            <include
                        android:id="@+id/submit_entry"
                        layout="@layout/button_black_specular"
                        />

        </LinearLayout>

    </LinearLayout>

</com.synapsy.android.lib.ui.widget.LibScrollView>
