<?xml version="1.0" encoding="utf-8"?>

<!-- debug console text -->
<TextView   
    xmlns:android="http://schemas.android.com/apk/res/android"       
    android:textColor="@color/text_debug_console"
    android:textSize="@dimen/text_debug_console"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:includeFontPadding="true"
    android:singleLine="false"
    android:gravity="left|top"
    android:fadingEdgeLength="@dimen/fading_edge_size"
    android:lineSpacingExtra="@dimen/text_debug_console_line_spacing_extra"
    android:lineSpacingMultiplier="@dimen/text_debug_console_line_spacing_multiplier"
    android:paddingLeft="3.08dp"
    android:paddingRight="3.08dp"
    android:paddingTop="3.08dp"
    android:paddingBottom="3.08dp"
    />
