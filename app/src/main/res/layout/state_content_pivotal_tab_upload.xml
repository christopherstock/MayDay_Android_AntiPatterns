<?xml version="1.0" encoding="utf-8"?>

<!-- tab 'upload' -->
<de.mayflower.lib.ui.widget.LibScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbarThumbHorizontal="@drawable/net_picfood_scrollbar"
    android:scrollbarThumbVertical="@drawable/net_picfood_scrollbar"
    android:scrollbarSize="@dimen/scrollbar_width"
    android:fadingEdgeLength="@dimen/fading_edge_size"
    android:requiresFadingEdge="vertical"
    android:fadeScrollbars="true"
    android:fillViewport="true"
    >

    <!-- content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|top"
        android:paddingLeft="@dimen/content_distance_big"
        android:paddingRight="@dimen/content_distance_big"
        android:paddingBottom="@dimen/content_distance_big"
        >

        <!-- title caption -->
        <include
            android:id="@+id/headline"
            layout="@layout/text_headline"
            />

        <!-- button 'upload from camera' -->
        <include
            android:id="@+id/upload_from_camera"
            layout="@layout/button_black_specular_wide"
            />

        <!-- fill spacer -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/content_distance_big"
            android:background="@android:color/transparent"
            />

        <!-- button 'upload from gallery' -->
        <include
            android:id="@+id/upload_from_gallery"
            layout="@layout/button_black_specular_wide"
            />

    </LinearLayout>

</de.mayflower.lib.ui.widget.LibScrollView>
