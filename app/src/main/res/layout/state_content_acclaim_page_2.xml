<?xml version="1.0" encoding="utf-8"?>

<!-- specifies the orientation -->
<de.mayflower.lib.ui.widget.LibScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbarThumbHorizontal="@drawable/net_picfood_scrollbar"
    android:scrollbarThumbVertical="@drawable/net_picfood_scrollbar"
    android:scrollbarSize="@dimen/scrollbar_width"
    android:fadingEdgeLength="@dimen/fading_edge_size"
    android:requiresFadingEdge="vertical"
    android:fadeScrollbars="true"
    android:gravity="center_horizontal|top"
    android:fillViewport="true"
    >

    <!-- outer container -->
    <LinearLayout
            android:id="@+id/acclaim_page_outer_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|top"
            >

        <!-- smartphone container -->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:gravity="center_horizontal|top"
                >

            <!-- fg pics -->
            <de.mayflower.lib.ui.widget.LibImageView
                android:contentDescription="@string/empty_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/net_picfood_acclaim_fg"
                />

        </RelativeLayout>

        <!-- message container -->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/content_distance_big"
                android:background="@android:color/transparent"
                >

            <!-- vertical layout -->
            <LinearLayout
                android:layout_width="@dimen/acclaim_dialog_width"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/net_picfood_acclaim_dialog_bg"
                android:padding="@dimen/acclaim_dialog_padding"
                >

                <!-- text -->
                <include    android:id="@+id/acclaim_text"
                            layout="@layout/text_dialog_acclaim"
                            />

                <!-- spacer -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/content_distance_normal"
                    android:background="@android:color/transparent"
                    />

                <!-- acclaim arrow right -->
                <de.mayflower.lib.ui.widget.LibImageView
                    android:contentDescription="@string/empty_string"
                    android:layout_width="@dimen/acclaim_fg_arrow_width"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:src="@drawable/net_picfood_acclaim_arrow_right"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</de.mayflower.lib.ui.widget.LibScrollView>
