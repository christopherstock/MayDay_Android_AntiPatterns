<?xml version="1.0" encoding="utf-8"?>

<!-- state container -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/state_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left|top"
    android:background="@drawable/net_picfood_bg_screen"
    >

    <!-- header -->
    <include
        layout="@layout/state_header"
        android:id="@+id/state_header"
        />

    <!-- frame layout for drop-shadow-pane over the content container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1.0"
        >

        <!-- content container horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="left|top"
            android:baselineAligned="false"
            >

            <!-- content container vertical -->
            <LinearLayout
                android:id="@+id/state_content_container"
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:gravity="left|top"
                android:layout_marginLeft="0.0dp"
                android:layout_marginRight="0.0dp"
                android:layout_marginBottom="0.0dp"
                android:layout_marginTop="0.0dp"
                >

                <!-- content is added programatically here -->

            </LinearLayout>

        </LinearLayout>

        <!-- drop shadow over content container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/drop_shadow_height"
            android:background="@drawable/net_picfood_drop_shadow_vert_header"
            />

    </FrameLayout>

</LinearLayout>
