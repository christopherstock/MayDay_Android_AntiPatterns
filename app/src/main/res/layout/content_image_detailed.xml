<?xml version="1.0" encoding="utf-8"?>

<!-- detailed image -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="left|top"
    android:baselineAligned="true"
    android:background="@android:color/transparent"
    >

    <!-- white pane -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:baselineAligned="true"
        android:background="@drawable/net_picfood_bg_detailed_image"
        android:layout_margin="@dimen/content_distance_normal"
        >

        <!-- header bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|top"
            android:baselineAligned="true"
            android:layout_margin="@dimen/content_distance_normal"
            >

            <!-- icon -->
            <com.synapsy.android.lib.ui.widget.LibImageView
                android:id="@+id/icon"
                android:contentDescription="@string/empty_string"
                android:layout_width="@dimen/gridview_item_detailed_image_user_icon_size"
                android:layout_height="@dimen/gridview_item_detailed_image_user_icon_size"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                />

            <!-- details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left|top"
                android:baselineAligned="true"
                android:layout_marginTop="@dimen/content_distance_normal"
                android:layout_marginLeft="@dimen/content_distance_normal"
                android:layout_marginRight="@dimen/content_distance_normal"
                android:layout_marginBottom="@dimen/content_distance_normal"
                >

                <!-- username -->
                <include
                    android:id="@+id/username"
                    layout="@layout/text_image_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <!-- fill spacer -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dp"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    />

                <!-- date -->
                <include
                    android:id="@+id/date"
                    layout="@layout/text_image_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <!-- fill spacer -->
            <RelativeLayout
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                />

            <!-- button 'options' -->
            <com.synapsy.android.lib.ui.widget.LibImageView
                android:id="@+id/button_options"
                android:contentDescription="@string/empty_string"
                android:layout_width="@dimen/image_detailed_options_button_size"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:paddingTop="@dimen/content_distance_normal"
                android:paddingLeft="@dimen/content_distance_normal"
                android:src="@drawable/net_picfood_options"
                />

        </LinearLayout>

        <!-- separator line -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_line_size"
            android:layout_marginLeft="@dimen/content_distance_normal"
            android:layout_marginRight="@dimen/content_distance_normal"
            android:background="@color/separator_line"
            />

        <!-- image container -->
        <RelativeLayout
            android:id="@+id/image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_distance_normal"
            android:layout_marginLeft="@dimen/content_distance_normal"
            android:layout_marginRight="@dimen/content_distance_normal"
            >

            <!-- image -->
            <com.synapsy.android.lib.ui.widget.LibImageView
                android:id="@+id/image"
                android:contentDescription="@string/empty_string"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />

        </RelativeLayout>

        <!-- details horizontal bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|top"
            android:baselineAligned="true"
            android:layout_marginLeft="@dimen/content_distance_normal"
            android:layout_marginRight="@dimen/content_distance_normal"
            android:layout_marginTop="@dimen/content_distance_normal"
            android:layout_marginBottom="@dimen/content_distance_normal"
            android:background="@android:color/transparent"
            >

            <!-- details vertical list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left|top"
                android:baselineAligned="true"
                android:background="@android:color/transparent"
                >

                <!-- location caption -->
                <include
                    android:id="@+id/location_caption"
                    layout="@layout/text_image_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <!-- location vicinity -->
                <include
                    android:id="@+id/location_vicinity"
                    layout="@layout/text_image_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <!-- location distance -->
                <include
                    android:id="@+id/location_distance"
                    layout="@layout/text_image_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <!-- horizontal layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical"
                    android:baselineAligned="false"
                    android:background="@android:color/transparent"
                    >

                    <!-- average food rating text -->
                    <include
                        android:id="@+id/average_food_rating_text"
                        layout="@layout/text_image_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <!-- average food rating icon -->
                    <com.synapsy.android.lib.ui.widget.LibImageView
                        android:id="@+id/average_food_rating_icon"
                        android:contentDescription="@string/empty_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="@dimen/content_distance_normal"
                        android:scaleType="centerInside"
                        />

                </LinearLayout>

                <!-- separator line -->
                <RelativeLayout
                    android:id="@+id/separator_line_likes"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_line_size"
                    android:background="@color/separator_line"
                    android:layout_marginTop="@dimen/content_distance_normal"
                    android:layout_marginBottom="@dimen/content_distance_normal"
                    />

                <!-- you like -->
                <include
                    android:id="@+id/you_like"
                    layout="@layout/text_image_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <!-- label 'likes' -->
                <include
                    android:id="@+id/likes_preview_label"
                    layout="@layout/text_image_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/content_distance_normal"
                    />

                <!-- likes preview area -->
                <LinearLayout
                    android:id="@+id/likes_preview_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left|top"
                    />

                <!-- text 'view all likes' -->
                <include
                    android:id="@+id/likes_view_all"
                    layout="@layout/text_image_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_distance_normal"
                    android:layout_marginTop="@dimen/content_distance_normal"
                    />

                <!-- separator line -->
                <RelativeLayout
                    android:id="@+id/separator_line_comments"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_line_size"
                    android:background="@color/separator_line"
                    android:layout_marginTop="@dimen/content_distance_normal"
                    android:layout_marginBottom="@dimen/content_distance_normal"
                    />

                <!-- label 'comments' -->
                <include
                    android:id="@+id/comments_preview_label"
                    layout="@layout/text_image_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/content_distance_normal"
                    />

                <!-- comments preview area -->
                <LinearLayout
                    android:id="@+id/comments_preview_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left|top"
                    />

                <!-- text 'view all comments' -->
                <include
                    android:id="@+id/comments_view_all"
                    layout="@layout/text_image_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_distance_normal"
                    android:layout_marginTop="@dimen/content_distance_normal"
                    />

            </LinearLayout>

        </LinearLayout>

        <!-- counts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|top"
            android:baselineAligned="true"
            >

            <!-- like count -->
            <include
                android:id="@+id/count_like"
                layout="@layout/text_image_default_centered"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_marginTop="@dimen/content_distance_normal"
                android:layout_marginBottom="@dimen/content_distance_normal"
                />

            <!-- separator line -->
            <RelativeLayout
                android:layout_width="@dimen/separator_line_size"
                android:layout_height="match_parent"
                android:background="@color/separator_line"
                />

            <!-- comment count -->
            <include
                android:id="@+id/count_comment"
                layout="@layout/text_image_default_centered"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_marginTop="@dimen/content_distance_normal"
                android:layout_marginBottom="@dimen/content_distance_normal"
                />

            <!-- separator line -->
            <RelativeLayout
                android:layout_width="@dimen/separator_line_size"
                android:layout_height="match_parent"
                android:background="@color/separator_line"
                />

            <!-- rating count -->
            <include
                android:id="@+id/count_rating"
                layout="@layout/text_image_default_centered"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_marginTop="@dimen/content_distance_normal"
                android:layout_marginBottom="@dimen/content_distance_normal"
                />

        </LinearLayout>

        <!-- separator line -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_line_size"
            android:layout_marginLeft="@dimen/content_distance_normal"
            android:layout_marginRight="@dimen/content_distance_normal"
            android:background="@color/separator_line"
            />

        <!-- buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|top"
            android:baselineAligned="true"
            >

            <!-- button 'like' -->
            <RelativeLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/content_distance_normal"
                android:layout_marginBottom="@dimen/content_distance_normal"
                >
                <include
                    android:id="@+id/button_like"
                    layout="@layout/button_black_small"
                    android:layout_width="@dimen/button_small_width"
                    android:layout_height="@dimen/button_small_height"
                    />
            </RelativeLayout>

            <!-- separator line -->
            <RelativeLayout
                android:layout_width="@dimen/separator_line_size"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                />

            <!-- button 'comment' -->
            <RelativeLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/content_distance_normal"
                android:layout_marginBottom="@dimen/content_distance_normal"
                >
                <include
                    android:id="@+id/button_comment"
                    layout="@layout/button_black_small"
                    android:layout_width="@dimen/button_small_width"
                    android:layout_height="@dimen/button_small_height"
                    />
            </RelativeLayout>

            <!-- separator line -->
            <RelativeLayout
                android:layout_width="@dimen/separator_line_size"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                />

            <!-- button 'rate food' -->
            <RelativeLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="@dimen/content_distance_normal"
                android:layout_marginBottom="@dimen/content_distance_normal"
                >
                <include
                    android:id="@+id/button_rate"
                    layout="@layout/button_black_small"
                    android:layout_width="@dimen/button_small_width"
                    android:layout_height="@dimen/button_small_height"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
