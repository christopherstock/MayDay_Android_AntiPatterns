                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="@dimen/item_padding_left"
                />

            <!-- right arrow -->
            <include
                layout="@layout/item_arrow_right"
                />

        </LinearLayout>

        <!-- item 'terms and conditions' -->
        <LinearLayout
