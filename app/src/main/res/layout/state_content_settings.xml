<?xml version="1.0" encoding="utf-8"?>

<!-- state 'settings' -->
<com.synapsy.android.lib.ui.widget.LibScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbarThumbHorizontal="@drawable/net_picfood_scrollbar"
    android:scrollbarThumbVertical="@drawable/net_picfood_scrollbar"
    android:scrollbarSize="@dimen/scrollbar_width"
    android:fadingEdgeLength="@dimen/fading_edge_size"
    android:requiresFadingEdge="vertical"
    android:fadeScrollbars="true"
    >

    <!-- scrollbar content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|top"
        android:paddingLeft="@dimen/content_distance_wmx_normal"
        android:paddingRight="@dimen/content_distance_wmx_normal"
        android:paddingBottom="@dimen/content_distance_wmx_normal"
        >

        <!-- logo -->
        <com.synapsy.android.lib.ui.widget.LibImageView
            android:contentDescription="@string/empty_string"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/content_top_logo_height"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/net_picfood_logo_hamburger"
            />

        <!-- item 'Find Friends' -->
        <LinearLayout
            android:id="@+id/item_find_friends"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:orientation="horizontal"
            android:gravity="left|center_vertical"
            android:baselineAligned="false"
            >

            <!-- text -->
            <include
                android:id="@+id/text_find_friends"
                layout="@layout/text_item"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="@dimen/item_padding_left"
                />

            <!-- right arrow -->
            <include
                layout="@layout/item_arrow_right"
                />

        </LinearLayout>

        <!-- item 'Send Feedback' -->
        <LinearLayout
            android:id="@+id/item_send_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:orientation="horizontal"
            android:gravity="left|center_vertical"
            android:baselineAligned="false"
            android:layout_marginTop="@dimen/item_distance_vertical"
            >

            <!-- text -->
            <include
                android:id="@+id/text_send_feedback"
                layout="@layout/text_item"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="@dimen/item_padding_left"
                />

            <!-- right arrow -->
            <include
                layout="@layout/item_arrow_right"
                />

        </LinearLayout>

        <!-- item 'Privacy policy' -->
        <LinearLayout
            android:id="@+id/item_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
