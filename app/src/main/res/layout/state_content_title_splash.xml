<?xml version="1.0" encoding="utf-8"?>

<!-- relative layout to use full screen -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/de_mayflower_antipattern_title_splash_background"
    >

    <!-- This LinearLayout is NOT useless! Fullscreen is only granted if a RelativeLayout is wrapping this! -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|top"
        android:background="@android:color/transparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal|center_vertical"
            >
            <de.mayflower.lib.ui.widget.LibImageView
                android:layout_width="@dimen/title_splash_image_top_width"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/de_mayflower_antipattern_logo_tortelini"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <de.mayflower.lib.ui.widget.LibImageView
                android:id="@+id/loading_circle"
                android:layout_width="@dimen/loading_circle_size"
                android:layout_height="@dimen/loading_circle_size"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/de_mayflower_antipattern_loading_circle"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            android:gravity="center_horizontal|center_vertical"
            >
            <de.mayflower.lib.ui.widget.LibImageView
                android:layout_width="@dimen/title_splash_image_bottom_width"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@string/empty_string"
                android:src="@drawable/de_mayflower_antipattern_title_splash_image_bottom"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
