<?xml version="1.0" encoding="utf-8"?>

<!-- header bar -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:orientation="horizontal"
    android:gravity="center_horizontal|center_vertical"
    android:background="@color/header_bg"
    >

    <!-- back button -->
    <com.synapsy.android.lib.ui.widget.LibImageView
        android:id="@+id/back_icon"
        android:contentDescription="@string/empty_string"
        android:layout_width="@dimen/header_icon_size"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/net_picfood_arrow_left"
        android:paddingLeft="@dimen/header_margin_x"
        android:paddingRight="@dimen/header_margin_x"
        />

    <!-- search button -->
    <com.synapsy.android.lib.ui.widget.LibImageView
        android:id="@+id/search_icon"
        android:contentDescription="@string/empty_string"
        android:layout_width="@dimen/header_icon_size"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/net_picfood_search"
        android:paddingLeft="@dimen/header_margin_x"
        android:paddingRight="@dimen/header_margin_x"
        />

    <!-- headline -->
    <include
        android:id="@+id/state_headline"
        layout="@layout/text_header"
        />

    <!-- spacer horizontal fill -->
    <RelativeLayout
        android:id="@+id/fill_spacer"
        android:layout_width="0.0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center_horizontal|center_vertical"
        >

        <!-- app logo -->
        <com.synapsy.android.lib.ui.widget.LibImageView
            android:id="@+id/app_logo"
            android:contentDescription="@string/empty_string"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/net_picfood_logo_olive"
            android:layout_marginLeft="@dimen/header_margin_x"
            android:layout_marginBottom="@dimen/header_margin_y"
            />

    </RelativeLayout>

    <!-- settings button -->
    <com.synapsy.android.lib.ui.widget.LibImageView
        android:id="@+id/settings_icon"
        android:contentDescription="@string/empty_string"
        android:layout_width="@dimen/header_icon_size"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/net_picfood_settings"
        android:paddingLeft="@dimen/header_margin_x"
        android:paddingRight="@dimen/header_margin_x"
        />

</LinearLayout>
