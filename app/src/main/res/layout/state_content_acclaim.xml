<?xml version="1.0" encoding="utf-8"?>

<!-- relative layout to use full screen -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <!-- vertical layout -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left|top"
            android:background="@android:color/transparent"
            >

        <!-- FrameLayout for bg-icons and fg-ViewPager -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0"
            >

            <!-- bg-container for bg-icons -->
            <RelativeLayout
                android:id="@+id/bg_icons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:fillViewport="true"
                >
            </RelativeLayout>

            <!-- container for ViewPager -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|top"
                android:background="@android:color/transparent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="left|top"
                    android:background="@android:color/transparent"
                    >

                    <!-- view pager title strip -->
<!--
                    <de.mayflower.picfood.ui.viewpagerindicator.PicFoodTitlePageIndicator
                        android:id="@+id/acclaim_view_pager_title_strip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />
-->
                    <!-- view pager -->
                    <android.support.v4.view.ViewPager
                            android:id="@+id/acclaim_view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="0.0dp"
                            android:layout_weight="1.0"
                            />

                </LinearLayout>

            </RelativeLayout>

            <!-- bottom drop-shadow container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                >

                <!-- bottom drop-shadow -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drop_shadow_height"
                    android:background="@drawable/net_picfood_drop_shadow_vert_footer"
                    />

            </RelativeLayout>

            <!-- bottom circle page indicator -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|bottom"
                >

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/acclaim_view_pager_title_strip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:padding="@dimen/content_distance_big"
                    />

            </RelativeLayout>

        </FrameLayout>

        <!-- buttons 'register' and 'login' -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/state_acclaim_footer_bg"
            >

            <!-- vertical layout -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="@dimen/content_distance_normal"
                    android:paddingRight="@dimen/content_distance_normal"
                    android:paddingBottom="@dimen/content_distance_normal"
                    android:background="@android:color/transparent"
                    >

                <!-- app logo -->
                <de.mayflower.lib.ui.widget.LibImageView
                    android:id="@+id/app_logo"
                    android:contentDescription="@string/empty_string"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/acclaim_logo_height"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:src="@drawable/net_picfood_logo_orange"
                    android:layout_marginBottom="@dimen/content_distance_normal"
                    />

                <!-- horizontal layout -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal|center_vertical"
                        >

                    <!-- button register -->
                    <include    android:id="@+id/button_register"
                                layout="@layout/button_black_specular"
                                />

                    <!-- horizontal spacer -->
                    <RelativeLayout
                        android:layout_width="@dimen/content_distance_normal"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        />

                    <!-- button login -->
                    <include    android:id="@+id/button_login"
                                layout="@layout/button_black_specular"
                                />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
